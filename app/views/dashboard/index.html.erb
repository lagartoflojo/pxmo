<div class="navbar navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">PXMO &mdash; Prof. X's Mutant Organizer</a>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="team-board-canvas">
    <div class="team-board">

      <% @teams.each do |team| %>
        <%= render team %>
      <% end -%>

      <div class="team add-team">
        <%= form_for Team.new, remote: true, 'data-type' => 'html' do |f| %>
          <%= f.text_field :name, placeholder: "Form new team", class: "new-team-input",
                'data-toggle' => "tooltip", 'data-trigger' => "focus", 'data-placement' => "bottom",
                title: "Press [enter] to create team" %>
        <% end -%>
      </div>

    </div> <!-- team-board -->
  </div> <!-- team-board-canvas -->

</div>
